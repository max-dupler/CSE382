<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="NHLTrack.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:NHLTrack"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Scores" SemanticProperties.HeadingLevel="Level1">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}"/>
        </Tab>
        <Tab Title="Rosters" SemanticProperties.HeadingLevel="Level1">
            <ShellContent ContentTemplate="{DataTemplate local:Rosters}"/>
        </Tab>
        <Tab Title="Preferences">
            <ShellContent ContentTemplate="{DataTemplate local:Prefs}"/>
        </Tab>
    </TabBar>

</Shell>

